<div class="links", style="margin-left: -20">

<h1><%= link_to @project.title, project_path(@project) %></h1>

<div class="row">

<% unless @current_stack == @project.stacks.first %>
  <div class="span6", style="margin-top: 5px">
   
    <%= render 'prev_card' %> 
  </div>
<% end %>

  <div class="span5", style="margin-left: 50px">

   <%= render 'form' %>
 (<%= link_to 'see versions', stack_path(@current_stack) %>)
 
  </div>


</div>

<div class="row">

<div class="span5 offset7">
  <% if @current_stack == @project.stacks.last %>
    
    <%= render 'stacks/form' %>
  <% else %>
    
    <%= link_to 'next stack >>', edit_card_path(@next_card), style:"float: right" %>
  <% end %>

  
</div>
</div>