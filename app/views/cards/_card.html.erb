<% stack = Stack.find(card.stack_id) %>
<% project = Project.find(stack.project_id) %>

<li>
  <div class='version <%= 'pick' if stack.pick.card_id == card.id %>'>

    <% unless stack.pick.card_id == card.id %>
      <%#= button_to "select", :action => "pick_me", remote: true %>
      <%= link_to 'select', :action => 'pick_me' %>
    <% end %>

    <%= card.writing %>

    <%= link_to 'revise', edit_project_stack_path(id: card.stack_id, project_id: project.id) %> |
    <%= link_to 'destroy version', card, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</li>